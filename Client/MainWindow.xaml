<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource title}" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>
        <Menu>
            <MenuItem x:Name="languages" Header="{DynamicResource languages}"></MenuItem>
        </Menu>
        <Button Grid.Row="2"  Height="25" Click="Button_Click" Content="{DynamicResource btn_label}" ></Button>
        <ListBox Grid.Row="1" Name="listBox"></ListBox>
    </Grid>
</Window>
